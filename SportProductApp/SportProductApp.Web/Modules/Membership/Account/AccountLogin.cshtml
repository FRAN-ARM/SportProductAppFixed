@{
    ViewData["Title"] = "Login";
    ViewData["PageId"] = "Login";
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}

@section Head {

    <style type="text/css">

        html {
            background: #B197FC;
        }

        body {
          font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
          font-size: 13px;
          color: #000;
          -ms-overflow-style: scrollbar;
        }

        .page-content {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100%;
            background: #B197FC;
        }

        #LoginPanel {
            padding: 30px 20px;
            width: 550px;
            margin: 25vh auto auto auto;
            background: #FFFFFF;
            box-shadow: 0px 4px 0px #183153;
            border: 4px solid #183153;
            border-radius: 12px;
            font-weight: 700;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #LoginPanel .caption {
            width: 180px;
        }

        #LoginPanel .logo {
            margin: 0 auto 20px auto;
            width: auto;
            height: 128px;
            background: transparent url("https://previews.jumpshare.com/thumb/815bc01b796dd6f1733c957c5af1949319ab0b1148a1b2c8c9d429da6871af612d58889db5eab54b0ad2c301cae3570ac4c0c903321a080c94b0927aea8a25a8482d90f5b13ce78c46898368a772f075") no-repeat center center;
            background-size: contain;
        }

       #LoginPanel h3 {
            font-size: 18px;
            font-weight: 700;
            margin: 16px 0 24px;
            color: #183153;
            text-align: center;
            //text-shadow: 0 1px 1px #333;
        }

       #LoginPanel .buttons {
            text-align: right;
            padding: 8px 0 4px 0;
            margin-right: 28px;
        }

       html[dir="rtl"] #LoginPanel .buttons {
            text-align: left;
            margin-left: 28px;
        }

        #LoginPanel .btn {
            color: #183153;
            padding: 8px 24px;
            font-weight: 700;
            background: #FFFFFF;
            border: 1px solid #183153;
            box-shadow: 0px 2px 0px #183153;
            border-radius: 2px;
            transition: 500ms;
        }
        #LoginPanel .btn:hover {
            background: #FFFFFF;
            border: 1px solid #183153;
            box-shadow: 0px 4px 0px #183153;
            border-radius: 2px;
        }
        #LoginPanel .btn:active {
            background: #DFDFDF;
            border: 1px solid #183153;
            box-shadow: 0px 1px 0px #183153;
            border-radius: 2px;
        }

        #LoginPanel .caption {
            color: #ececec;
            font-weight: 700;
        }

        #LoginPanel .actions {
            padding-right: 28px;
        }

        #LoginPanel .actions a {
            color: #B197FC;
            padding: 2px 2px 2px 2px;
            margin-top: 5px;
            display: block;
            float: right;
            clear: both;
            border-bottom: 1px dashed #999;
            transition: 500ms;
        }

        #LoginPanel .actions a:hover {
            color: #7655D7;
        }

        html[dir="rtl"] #LoginPanel .actions a {
            margin-left: 35px;
            float: left;
        }

        #LoginPanel .actions a i {
            font-weight: 700;
            margin-right: 4px;
        }

        #LoginPanel .s-Form label.error {
            background-image: url(@Url.Content("~/Content/serenity/images/cross.png"));
            padding: 26px 0 0 22px;
        }

        #LoginPanel .s-Form label.error.checked {
            background-image: none;
        }

        #LoginPanel .s-Form .field {
            padding: 8px;
        }

        #LoginPanel .s-Form input {
            padding: 6px 10px;
            border: none;
            background: #B197FC;
            color: #183153;
            transition: 500ms;
        }

        #LoginPanel .s-Form input::placeholder {
            color: rgba(24, 49, 83, 0.35);
        }

        #LoginPanel .s-Form input:hover {
            background: #C7B5FD;
        }

        #LoginPanel .s-Form .caption {
            padding: 6px 10px;
            color: #183153;
        }

        html[dir="rtl"] #LoginPanel .s-Form .caption {
            padding: 6px 60px;
            color: #fff;
        }

        #LoginPanel a {
            color: aqua;
        }

        #LoginPanel .s-PropertyGrid .categories {
            height: auto;
        }

        #LoginPanel .flex-layout .s-PropertyGrid {
            display: block;
        }

        .s-Form .caption sup {
            color: #C32828;
        }

        @@media(max-width: 550px), (max-height: 500px) {
            #LoginPanel {
                padding: 16px 4px 16px 4px;
                position: absolute;
                margin: 0;
                width: auto;
                top: 10px;
                left: 10px;
                right: 10px;
            }
        }
    </style>
}

@if (SiteInitialization.SkippedMigrations)
{
    <div class="alert alert-error alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-warning"></i> Warning!</h4>
        SportProductApp skipped running migrations to avoid modifying an arbitrary database.
        If you'd like to run migrations on this database, remove the safety check
        in SiteInitialization.RunMigrations method.
    </div>
}

@if (ViewData["Activated"] != null)
{
    <div class="alert alert-info alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-info"></i>@LocalText.Get("Dialogs.InformationTitle")</h4>
        @Texts.Forms.Membership.SignUp.ActivationCompleteMessage
    </div>
}

<div class="page-content">
    <div id="LoginPanel">

    </div>
</div>

<script type="text/javascript">

jQuery(function() {
    var loginPanel = new SportProductApp.Membership.LoginPanel($('#LoginPanel')).init();

@if (SportProductApp.Administration.Repositories.UserRepository.isPublicDemo)
{<text>
    loginPanel.byId('Username').val('admin');
    loginPanel.byId('Password').val('serenity');
</text>}

@if (ViewData["Activated"] != null)
{
    <text>
    $(function() {
        loginPanel.byId('Username').val(@Html.Raw(Serenity.JSON.Stringify(ViewData["Activated"])));
        loginPanel.byId('Password').focus();
    });
    </text>
}
});
</script>